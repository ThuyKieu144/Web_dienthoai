@model Web_dienthoai.Models.DonHang

@{
    ViewBag.Title = "Thank You";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cảm ơn bạn đã đặt hàng!</h2>
<p>Đơn hàng của bạn đã được đặt thành công.</p>

<div>
    <h4>Thông tin đơn hàng:</h4>
    <p>Mã đơn hàng: @Model.DonHangID</p>
    <p>Ngày đặt: @Model.NgayDat</p>
    <p>Tổng tiền: @Model.CTDonHang.Sum(item => item.SoLuong * item.Gia) đ</p>
</div>

<p><a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp tục mua sắm</a></p>
