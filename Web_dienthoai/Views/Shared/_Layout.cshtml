<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
        }

        .navbar {
            background-color: #e1c7f1;
            color:black
        }
        footer {
            background-color: #e1c7f1;
            color: #000000;
            text-align: center;
            padding: 10px 0;
            bottom: 0;
            width: 100%;
        }

    </style>
</head>

<body style="background-color: #ffffff">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm ">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <img src="~/img/logo.jpg" alt="Logo" style="height:100px;width:100px" class="d-inline-block align-text-cen rounded-circle">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <div class="item-ul">
                    <ul class="navbar-nav flex-grow-1 ul-nav">
                        <li class="tcctimkiem" >
                            <div class="search-bar ">
                                <form action="@Url.Action("TimKiem", "SanPham")" method="get" class="form-inline my-2 my-lg-0 itemform">
                                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm" aria-label="Search" name="tenSanPham">
                                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
                                </form>
                            </div>
                        </li>
                        <li>@Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        @*@if (Session["Username"] != null)
                        {
                            <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Đăng nhập", "Index", "Account", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        }*@

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Cart")">
                                <i class="fas fa-shopping-cart"></i>
                                Giỏ hàng
                                @*<span class="badge badge-pill badge-danger" style="margin-left: 5px; vertical-align: top;">
                                        @if (Session["Cart"] != null && ((List<Web_dienthoai.Models.CartItem>)Session["Cart"]).Count > 0)
                                        {
                                            @( ((List<Web_dienthoai.Models.CartItem>)Session["Cart"]).Count )
                                        }
                                        else
                                        {
                                            @:0
                                        }
                                    </span>*@
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <footer>
        @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        <br/>*@
        <h5>HOTLINE: 0123456789 - Nguyễn Thị Thúy Kiều</h5>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
