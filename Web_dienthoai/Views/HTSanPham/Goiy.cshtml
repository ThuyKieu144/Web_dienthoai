@model IEnumerable<Web_dienthoai.Models.SanPham>
@{
    ViewBag.Title = "Gợi ý";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;

}
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="Sale bg-white container-fluid bg-white">
    <div class="row">
        <div style="display: flex; justify-content: space-between; align-items: center;">
            <h2 style="color: #DC143C;">Sản phẩm gợi ý</h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4 ">
                    <div class="cart product-card" style="height:350px">
                        <div class="position-relative Image">
                            <a href="@Url.Action("Details", "HTSanPham", new {@id= item.SanPhamID})" title="xemchitiet">
                                <img class="card-img-top" src="~/img/img_sp/@item.HinhAnh"/>
                            </a>
                        </div>
                        <div class="cart-body">
                            @Html.ActionLink(item.TenSanPham, "Details", "HTSanPham", new { id = item.SanPhamID }, new { @class = "product-name" })
                            <p class="product-price">@item.Gia VND</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-warning">★★★★★</span>
                                </div>
                                <button class="btn btn-outline-danger btn-sm">Yêu thích</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

